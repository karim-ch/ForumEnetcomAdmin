<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:context="com.example.fatma.forumadmin.MainActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <SurfaceView
                android:id="@+id/cameraPreview"
                android:layout_width="match_parent"
                android:layout_height="480px"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/nameResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:text="Name"
                android:textSize="20sp" />


            <TextView
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:textSize="20sp"
                android:layout_below="@+id/nameResult"
                android:id="@+id/RegistredWorkshop"
                android:layout_marginTop="10dp"
                android:text="RegistredWorkshop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:textSize="20sp"
                android:layout_below="@+id/RegistredWorkshop"
                android:id="@+id/pack"
                android:layout_marginTop="10dp"
                android:text="Pack"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/pack_btn"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_below="@+id/RegistredWorkshop"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@+id/pack"
                android:text="Set OK"
                android:textColor="#fff"
                android:background="#911515"/>

            <TextView
                android:id="@+id/restauration"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/restau_ok"
                android:layout_alignBottom="@+id/restau_ok"
                android:layout_marginEnd="25dp"
                android:layout_toStartOf="@+id/restau_ok"
                android:gravity="center_horizontal"
                android:text="Restauration"
                android:textSize="20sp" />

            <Button
                android:id="@+id/restau_ok"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_alignStart="@+id/pack_btn"
                android:layout_below="@+id/pack_btn"
                android:layout_marginTop="12dp"
                android:background="#911515"
                android:text="Set OK"
                android:textColor="#fff" />

            <Button
                android:layout_below="@id/spinner"
                android:id="@+id/restart_btn"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="35dp"
                android:layout_marginTop="22dp"
                android:background="#18226b"
                android:text="Restart"
                android:textColor="#fff" />


            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spinner"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_alignStart="@+id/restart_btn"
                android:layout_below="@+id/restau_ok"
                android:layout_marginTop="12dp">


            </android.support.v7.widget.AppCompatSpinner>

            <Button
                android:id="@+id/setPositions"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/spinner"
                android:layout_alignStart="@+id/logout_btn"
                android:background="#3a3a3a"
                android:text="set Position"
                android:textColor="#fff" />

            <Button
                android:id="@+id/logout_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/restart_btn"
                android:layout_alignBottom="@+id/restart_btn"
                android:layout_toEndOf="@+id/spinner"
                android:background="#000000"
                android:text="Logout"
                android:textColor="#fff" />


        </RelativeLayout>


</ScrollView>